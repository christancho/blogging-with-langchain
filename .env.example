# ============================================================================
# LLM Provider Configuration
# ============================================================================
# The system tries Anthropic Claude first, and automatically falls back to
# OpenRouter if Anthropic fails. You can configure either or both providers.
# At least one API key is required.

# Primary: Anthropic Claude (recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_TEMPERATURE=0.7

# Fallback: OpenRouter (used if Anthropic fails)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o

# ============================================================================
# LangSmith Configuration (Optional - for tracing and debugging)
# ============================================================================

# Enable LangSmith tracing (true/false)
LANGCHAIN_TRACING_V2=false

# LangSmith API key (get from https://smith.langchain.com)
# LANGCHAIN_API_KEY=your_langsmith_api_key_here

# Project name in LangSmith (optional - defaults to "blog-generation")
# LANGCHAIN_PROJECT=blog-generation

# LangSmith endpoint (optional - defaults to official endpoint)
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================================================
# Search API Configuration
# ============================================================================

BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# ============================================================================
# Deep Research Settings (Optional - defaults shown)
# ============================================================================

# Number of search queries to generate in deep mode
# DEEP_RESEARCH_QUERIES=6

# Number of URLs to fetch per query
# DEEP_RESEARCH_URLS_PER_QUERY=3

# Maximum total URLs to fetch (safety limit)
# DEEP_RESEARCH_MAX_URLS_TOTAL=20

# URL fetch timeout in seconds
# URL_FETCH_TIMEOUT=30

# ============================================================================
# Ghost CMS Configuration
# ============================================================================

GHOST_API_KEY=your_ghost_admin_api_key_here
GHOST_API_URL=https://your-ghost-site.com
GHOST_AUTHOR_ID=your_author_id_here

# ============================================================================
# Blog Content Settings (Optional - defaults shown)
# ============================================================================

# Word count target
# WORD_COUNT_TARGET=3500

# Number of main content sections
# NUM_SECTIONS=4

# Writing style and tone
# Options: "informative and insightful", "authoritative and professional",
#          "conversational and engaging", "technical and detailed",
#          "educational and accessible"
# BLOG_TONE=informative and insightful

# Minimum inline links required
# MIN_INLINE_LINKS=10
# MAX_INLINE_LINKS=15

# ============================================================================
# SEO Settings (Optional - defaults shown)
# ============================================================================

# Keyword optimization
# TARGET_KEYWORD_DENSITY=1.5

# Meta data lengths
# SEO_TITLE_MIN_LENGTH=50
# SEO_TITLE_MAX_LENGTH=60
# META_DESCRIPTION_MIN_LENGTH=150
# META_DESCRIPTION_MAX_LENGTH=160

# Tags
# MIN_TAGS=5
# MAX_TAGS=8

# ============================================================================
# Output Settings (Optional - defaults shown)
# ============================================================================

# OUTPUT_DIR=output
# OUTPUT_FORMAT=markdown
# SAVE_INTERMEDIATE_OUTPUTS=false

# ============================================================================
# Ghost Publishing Settings (Optional - defaults shown)
# ============================================================================

# Publish as draft or published
# PUBLISH_AS_DRAFT=true

# Default tags (comma-separated)
# DEFAULT_TAGS=blog,auto-generated
